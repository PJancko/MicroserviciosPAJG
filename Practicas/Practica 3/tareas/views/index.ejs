<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Lista de Tareas</title>
</head>
<body>
  <h1>Lista de Tareas</h1>
  <a href="/nuevo">Agregar Tarea</a>
  <table border="1">
    <tr>
      <th>Título</th>
      <th>Descripción</th>
      <th>Estado</th>
      <th>Fecha</th>
      <th>Acciones</th>
    </tr>
    <% tareas.forEach(t => { %>
      <tr>
        <td><%= t.titulo %></td>
        <td><%= t.descripcion %></td>
        <td><%= t.estado %></td>
        <td><%= t.fechaCreacion.toLocaleString() %></td>
        <td>
          <a href="/editar/<%= t._id %>">Editar</a> |
          <a href="/eliminar/<%= t._id %>">Eliminar</a>
        </td>
      </tr>
    <% }) %>
  </table>
</body>
</html>
